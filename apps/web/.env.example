
# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
# For local development, use relative path to data directory
# For production/Docker, use absolute path like /data/app.sqlite
# If you use libsql, make sure to have the file: prefix
DATABASE_URL=file:../../data/app.sqlite

# Video worker (legacy - replaced by external transcoding)
JOB_SHARED_SECRET="sk_test_secret_job_key"

# External Transcoding Service
TRANSCODING_PROVIDER=custom
TRANSCODING_WEBHOOK_BASE_URL=https://your-domain.com
TRANSCODING_CUSTOM_API_URL=https://your-transcoding-service.com/api
TRANSCODING_CUSTOM_API_KEY=your_api_key

# Better Auth
# Generate secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_at_least_32_characters_long
BETTER_AUTH_URL=http://localhost:3000

# Postmark Email
# Get API key from https://postmarkapp.com
POSTMARK_API_KEY=your_postmark_api_key

# Cloudflare R2 Storage (S3-compatible)
# Public URL for serving assets
NEXT_PUBLIC_ASSETS_BASE=https://your-bucket.r2.dev

# S3/R2 Configuration
S3_ENDPOINT=https://your-account-id.eu.r2.cloudflarestorage.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_REGION=auto
S3_PUBLIC_URL=https://your-bucket.r2.dev
